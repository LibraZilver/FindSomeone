<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    android:background="@drawable/border_top_bar"
    android:gravity="center"
    android:minHeight="@dimen/actionBarSize">

    <ImageView
        android:tag="0"
        android:id="@+id/home_tab"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_icon_bar"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="?android:selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:onClick="onClickTabBar"
        android:src="@drawable/ic_home"
        android:tint="@color/colorUnSelectedTab" />

    <ImageView
        android:tag="1"
        android:id="@+id/history_tab"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_icon_bar"
        android:layout_weight="1"
        android:background="?android:selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:onClick="onClickTabBar"
        android:src="@drawable/ic_history"
        android:tint="@color/colorUnSelectedTab" />


    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/height_icon_bar"
        android:layout_weight="1"
      />


    <ImageView
        android:tag="2"
        android:id="@+id/event_tab"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_icon_bar"
        android:layout_weight="1"
        android:background="?android:selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:onClick="onClickTabBar"
        android:src="@drawable/ic_near_me"
        android:tint="@color/colorUnSelectedTab" />


    <ImageView
        android:tag="3"
        android:id="@+id/setting_tab"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_icon_bar"
        android:layout_weight="1"
        android:background="?android:selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:onClick="onClickTabBar"
        android:src="@drawable/ic_dehaze"
        android:tint="@color/colorUnSelectedTab" />


</LinearLayout>
